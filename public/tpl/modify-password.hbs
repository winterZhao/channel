<form class="form-horizontal">
    <div class="form-group">
        <label for="previous-password" class="col-sm-2 control-label">请输入原密码</label>
        <div class="col-sm-4">
            <input type="password" class="form-control" id="previous-password" placeholder="原密码">
        </div>
    </div>
    <div class="form-group">
        <label for="new-password" class="col-sm-2 control-label">请输入新密码</label>
        <div class="col-sm-4">
            <input type="password" class="form-control" id="new-password" placeholder="新密码">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="button" class="btn btn-primary" id="submit-password" value="提交">
        </div>
    </div>
</form>